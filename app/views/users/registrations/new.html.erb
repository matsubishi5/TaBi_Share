<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 devise">

    <div class="devise__link">
      <%= render "users/shared/links" %>
    </div>

    <h3 class="devise__title">会員情報入力</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: CustomFormBuilder) do |f| %>

    <%= f.label :name, "氏名", class: "devise__label" %>
    <span class="devise__require-label">必須</span><br>
    <%= f.text_field :name, autofocus: true, placeholder: "例) 田中 太郎", autocomplete: "name", class: "form-control" %>

    <%= f.label :age, "年齢", class: "devise__label" %>
    <span class="devise__require-label">必須</span><br>
    <%= f.number_field :age, placeholder: "例) 22", autocomplete: "age", class: "form-control" %>

    <%= f.label :sex, "性別", class: "devise__label" %>
    <span class="devise__require-label">必須</span><br>
    <%= f.select :sex, User.sexes.keys, {prompt: "選択してください"}, class: "form-control" %>

    <%= f.label :postcode, "郵便番号", class: "devise__label" %>
    <span class="devise__any-label">任意</span><br>
    <%= f.text_field :postcode, placeholder: "例) 163-8001", autofocus: true, autocomplete: "postcode", class: "form-control"  %>

    <%= f.label :prefecture_name, "都道府県", class: "devise__label" %>
    <span class="devise__any-label">任意</span><br>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, {prompt: "選択してください"}, class: "form-control" %>

    <%= f.label :address_city, "市区町村", class: "devise__label" %>
    <span class="devise__any-label">任意</span><br>
    <%= f.text_field :address_city, placeholder: "例) 新宿区", autocomplete: "address_city", class: "form-control" %>

    <%= f.label :address_street, "番地", class: "devise__label" %>
    <span class="devise__any-label">任意</span><br>
    <%= f.text_field :address_street, placeholder: "例) 西新宿2-8-1", autocomplete: "address_street", class: "form-control" %>

    <%= f.label :address_building, "建物", class: "devise__label" %>
    <span class="devise__any-label">任意</span><br>
    <%= f.text_field :address_building, placeholder: "例) グランドハイツ 123号", autocomplete: "address_building", class: "form-control" %>

    <%= f.label :email, "メールアドレス", class: "devise__label" %>
    <span class="devise__require-label">必須</span><br>
    <%= f.email_field :email, placeholder: "例) abc@abc.abc", autocomplete: "email", class: "form-control" %>

    <%= f.label :password, "パスワード", class: "devise__label" %>
    <span class="devise__require-label">必須</span><br>
    <%= f.password_field :password, placeholder: "#{@minimum_password_length}~20文字", autocomplete: "new-password", class: "form-control" %>

    <%= f.label :password_confirmation, "パスワード(再確認)", class: "devise__label" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>

    <div class="devise__recapcha">
      <%= recaptcha_tags %>
    </div>

    <div class="actions devise__button">
      <%= f.submit "新規会員登録", class: "btn btn-success btn-lg btn-block" %>
    </div>
    <% end %>

    <div class="col-xs-3"></div>
  </div>
</div>