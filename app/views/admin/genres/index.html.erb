<h1>ジャンル新規登録・一覧画面</h1>

<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>

<%= f.label :name, "ジャンル" %>
<%= f.text_field :name %>

<%= f.submit "新規登録" %>

<% end %>

<table class="table table-hover">
	<thead>
		<tr>
			<th>ジャンル</th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.name %></td>
			<td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
			<td><%= link_to "削除", admin_genre_path(genre), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
