<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6">
    <%= form_with model: @scene, url: admin_scenes_path, local: true, class: "genre__form" do |f| %>
    <div class="image-container">
      <%= f.file_field :profile_image, id: "img_field", style: 'display:none;' %>
      <%= attachment_image_tag @genre, :image, size: "400x200", fallback: "no_image.png", onClick: "$('#img_field').click()", class: "img_prev img-thumbnail" %><br>
    </div>

    <%= f.attachment_field :image %><br>

    <%= f.submit "保存", class: "btn btn-primary btn-block scene__button" %>
    <% end %>

  </div>
  <div class="col-xs-3"></div>
</div>