<h1>ユーザー一覧画面</h1>

<table>
	<thead>
		<tr>
			<th>ユーザーID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= link_to user.nickname, admin_user_path(user) %></td>
				<td><%= user.email %></td>
				<td><%= user.is_valid %></td>
			</tr>
		<% end %>
	</tbody>
</table>