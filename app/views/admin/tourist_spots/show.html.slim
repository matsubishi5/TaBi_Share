.row
  .col-xs-2

  .col-xs-8
    .table-responsive
      table.table.table-bordered.table-hove
        tbody
          tr
            th.active
              | id
            td
              = @tourist_spot.id
          tr
            th.active
              | 登録日
            td
              = @tourist_spot.created_at.to_s(:datetime_jp)
          tr
            th.active
              | 最終更新日
            td
              = @tourist_spot.updated_at.to_s(:datetime_jp)
          tr
            th.active
              | 画像
            td
              = image_tag @tourist_spot.images[0].to_s, class: "img-thumbnail img-responsive"
          tr
            th.active
              | 地名・施設名
            td
              = @tourist_spot.name
          tr
            th.active
              | タグ
            td
              - tourist_spot.tag_list.each do |tag|
                .badge
                  = tag
          tr
            th.active
              | ジャンル
            td
              = @tourist_spot.genre.name
          tr
            th.active
              | 利用シーン
            td
              = @tourist_spot.scene.name
          tr
            th.active
              | 紹介文
            td
              = @tourist_spot.introduction
          tr
            th.active
              | 住所
            td
              - if @tourist_spot.postcode
                = @tourist_spot.full_address
          tr
            th.active
              | 電話番号
            td
              = @tourist_spot.phone_number
          tr
            th.active
              | アクセス方法
            td
              = @tourist_spot.access
          tr
            th.active
              | 営業時間
            td
              = @tourist_spot.business_hour
          tr
            th.active
              | 駐車場
            td
              = @tourist_spot.is_parking

    = link_to "レビュー一覧", admin_tourist_spot_reviews_path(@tourist_spot), class: "btn btn-success btn-block"
    br

    = link_to "編集", edit_admin_tourist_spot_path(@tourist_spot), class: "btn btn-primary btn-block"
    br

    = link_to "削除", admin_tourist_spot_path(@tourist_spot), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-block"
    br

  .col-xs-2
