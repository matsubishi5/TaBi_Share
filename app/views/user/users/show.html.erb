<h1>ユーザー詳細画面</h1>

<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>

<%= attachment_image_tag @user, :header_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>

<%= label_tag :ユーザーID %>
<%= @user.id %>
<%= @user.is_valid %>ユーザー<br>

<%= label_tag :ニックネーム %>
<%= @user.nickname %><br>

<%= label_tag :住所 %>
<%= @user.full_address %><br>

<%= label_tag :メールアドレス %>
<%= @user.email %><br>

<%= link_to "編集する", edit_admin_user_path(@user) %><br>

<%= link_to "フォロー数:#{@user.follower.count}", user_following_path(@user) %></td>
<%= link_to "フォロワー数:#{@user.followed.count}", user_follower_path(@user) %>

<div id="followbutton_<%= @user.id %>">
  <% unless @user == current_user %>
  <%= render "user/users/followbutton", user: @user %>
  <% end %>
</div>

<% unless @user.id == current_user.id %>
<% if @isRoom == true %>
<%= link_to "チャットへ", user_room_path(@roomId) %>
<% else %>
<%= form_with model: @room, url: user_rooms_path, local: true do |f| %>
<%= fields_for @entry do |e| %>
<%= e.hidden_field :user_id, value: @user.id %>
<% end %>
<%= f.submit "チャットを始める" %>
<% end %>
<% end %>
<% end %>