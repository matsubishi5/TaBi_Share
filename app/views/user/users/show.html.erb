<div class="row user">
  <div class="col-xs-2"></div>
  <div class="col-xs-8">
    <table class="table">
      <tbody>
        <tr>
          <td>
            <h3><span class="label label-warning"><%= @user.rank %></span></h3>
            <% if @user == current_user %>
            <p>( 次のランクまであと<%= @user.next_rank(@user) %>ポイント )</p>
            <% end %>

            <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.png", class: "img-thumbnail user__image" %>
            <span class="user__name">
              <%= @user.name %>
            </span>
            ( <%= @user.age %>歳<%= @user.sex %> )

            <% if @user == current_user %>
            <%= link_to "プロフィールを編集", edit_user_user_path(@user), class: "btn btn-primary user__button" %>
            <%= link_to "退会", user_user_path(@user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
            <% end %>
            <% if user_signed_in? %>
            <span id="followbutton_<%= @user.id %>" class="user__button">
              <% unless @user == current_user %>
              <%= render "user/users/followbutton", user: @user %>
              <% end %>
            </span>
            <% end %>

            <% if user_signed_in? %>
            <% unless @user.id == current_user.id %>
            <% if @isRoom == true %>
            <%= link_to "メッセージ",user_room_path(@roomId), class: "btn btn-success user__button" %>
            <% else %>
            <%= form_with model: @room, url: user_rooms_path, local: true do |f| %>
            <%= fields_for @entry do |e| %>
            <%= e.hidden_field :user_id, value: @user.id %>
            <% end %>
            <%= f.submit "メッセージ", class: "btn btn-success, user__button" %>
            <% end %>
            <% end %>
            <% end %>
            <% end %>

            <p><%= @user.introduction %></p>
          </td>
        </tr>
        <tr>
          <td></td>
        </tr>
      </tbody>
    </table>

    <ul class="nav nav-tabs nav-justified">
      <li role="presentation"><%= link_to "ユーザートップ", user_user_path(@user) %></li>
      <li role="presentation"><%= link_to "行った観光地", user_user_went_tourist_spots_path(@user) %></li>
      <li role="presentation"><%= link_to "行きたい観光地", user_user_favorite_tourist_spots_path(@user) %></li>
      <li role="presentation">
        <%= link_to "#{@user.follower.count}フォロー中", user_following_path(@user) %>
      </li>
      <li id="follower-link_<%= @user.id %>" role=" presentation">
        <%= link_to "#{@user.followed.count}フォロワー", user_follower_path(@user) %>
      </li>
    </ul>
  </div>
  <div class="col-xs-2"></div>
</div>

<div class="row user__reviews">
  <div class="col-xs-4"></div>
  <div class="col-xs-4">
    <%= render "user/reviews/reviews", reviews: @reviews %>
  </div>
  <div class="col-xs-4"></div>
</div>

<%= paginate @reviews %>