<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6 review">

    <div class="tourist-spot__logo">
      <%= link_to  root_path do %>
      <%= image_tag 'logo.jpg' %><br>
      <% end %>
    </div>

    <%= form_with model: @review, url: user_tourist_spot_review_path(@review), local: true do |f| %>

    <%= f.label :images, "写真(複数選択可)" %>
    <span class="review__require-label">必須</span><br>
    <p><%= f.file_field :images, multiple: true %></p>

    <%= f.label :title, "タイトル" %>
    <span class="review__require-label">必須</span><br>
    <%= f.text_field :title, class: "form-control" %><br>

    <%= f.label :body, "本文" %>
    <span class="review__require-label">必須</span><br>
    <%= f.text_area :body, class: "form-control" %><br>

    <%= f.label :score, "点数" %>
    <span class="review__require-label">必須</span><br>
    <%= f.select :score, options_for_select(1..100), {prompt: "選択してください"}, class: "form-control" %><br>

    <%= f.submit "保存", class: "btn btn-success btn-lg btn-block" %>

    <% end %>

    <div class="col-xs-3"></div>
  </div>
</div>