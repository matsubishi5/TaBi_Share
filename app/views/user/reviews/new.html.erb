<h1>レビュー新規投稿画面</h1>

<%= form_with model: @review, url: user_tourist_spot_reviews_path, local: true do |f| %>

<%= f.label :title, "タイトル" %><br>
<%= f.text_field :title %><br>

<%= f.label :body, "本文" %><br>
<%= f.text_field :body %><br>

<%= f.label :score, "点数" %><br>
<%= f.select :score, options_for_select(1..100), include_blank: "-----" %><br>

<%= f.radio_button :is_value, "本名" %>
<%= f.label :is_value,"有効" %>
<%= f.radio_button :is_value, "ニックネーム" %>
<%= f.label :is_value, "ニックネーム"%><br>

<%= f.hidden_field :tourist_spot_id, value: @tourist_spot.id  %>

<%= f.submit "投稿" %>

<% end %>
