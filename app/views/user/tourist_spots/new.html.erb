<h1>観光スポット新規登録画面</h1>

<%= form_with model: @tourist_spot, url: user_tourist_spots_path, local: true do |f| %>

	<%= f.label :name, "地名・施設名" %><br>
	<%= f.text_field :name %><br>

	<%= f.label :genre_id, "ジャンル" %><br>
	<%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-----" %><br>

	<%= f.label :scene_id, "利用シーン" %><br>
	<%= f.collection_select :scene_id, Scene.all, :id, :name, include_blank: "-----" %><br>

	<%= f.label :postcode, "郵便番号" %><br>
	<%= f.text_field :postcode %><br>

  <%= f.label :prefecture_name, '都道府県' %><br>
  <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: true %><br>

  <%= f.label :address_city, "市区町村" %><br>
  <%= f.text_field :address_city %><br>

  <%= f.label :address_street, "番地" %><br>
  <%= f.text_field :address_street %><br>

  <%= f.label :address_building, "建物" %><br>
  <%= f.text_field :address_building %><br>

	<%= f.label :introduction, "紹介文" %><br>
	<%= f.text_area :introduction %><br>

	<%= f.label :access, "アクセス方法" %><br>
	<%= f.text_area :access %><br>

	<%= f.label :business_hour, "営業時間" %><br>
	<%= f.text_area :business_hour %><br>

	<%= f.label :phone_number, "電話番号" %><br>
	<%= f.text_field :phone_number %><br>

  <%= f.radio_button :is_parking, "有", checked: true %>
  <%= f.label :is_parking, "有" %>
  <%= f.radio_button :is_parking, "無" %>
  <%= f.label :is_parking, "無" %><br>

	<%= f.submit "新規登録" %>

<% end %>