<% if tourist_spot.favorited_by?(current_user) %>
<%= link_to user_tourist_spot_favorites_path(tourist_spot), method: :delete, remote: true, class: "btn btn-default" do %>
<i class="fas fa-map-marker-alt"> 行きたい！から削除</i>
( <%= tourist_spot.favorites.count %> )
<% end %>
<% else %>
<%= link_to user_tourist_spot_favorites_path(tourist_spot), method: :post, remote: true, class: "btn btn-warning" do %>
<i class="fas fa-star"> 行きたい！</i>
( <%= tourist_spot.favorites.count %> )
<% end %>
<% end %>